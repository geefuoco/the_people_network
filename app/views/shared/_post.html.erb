<div class="conatiner post">
  <div class="container post-header d-flex justify-content-between ps-0">
    <%= link_to user_path_url(id: post.user.id),
      class: "btn text-nowrap" do %>
      <div class="container d-flex ps-0 justify-content-start align-items-center">
        <%= image_tag user_avatar(post.user), size: "40x40", class: "rounded-circle me-3"%>
        <h6><%= post.user.name %> <%= post.user.last_name%></h6>
      </div>
    <% end %>
    <% if post.user_id == current_user.id%>
      <div class="container text-end p-0">
        <div class="dropdown">      
          <button class="btn pe-0 dropdown-toggle caret-off"
                  type="button"
                  id="dropdown-elipse"
                  data-bs-toggle="dropdown"
                  aria-expanded="false">
            <i class="bi bi-three-dots"></i>
          </button>
          <ul class="dropdown-menu">
            <%= link_to "Delete", post,
              method: :delete,
              class: "dropdown-item" %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <p class="fs-6 ps-2 pt-2">
    <%= post.body%>
  </p>
  <div class="container d-flex justify-content-end pe-0"
       id="post-footer">
    <%= render "shared/like_button", post: post%>
    <%= link_to post_path(id: post.id),
      class: "btn px-0" do %>
      <span class="p-2">
        <i class="bi bi-chat-left-text"></i>
        <%= post.comments_count %>
      </span>
    <% end %>
  </div>

</div>