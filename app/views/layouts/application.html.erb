<!DOCTYPE html>
<html>
  <head>
    <title>ThePeopleNetwork</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path("default_profile.jpg")%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render "shared/modal" %>
    <%= render "shared/navbar" %>
    <div class="container-fluid position-absolute top-10 text-center" id="flash">
      <%= render "shared/flash" %>
    </div>
    <%= yield %>
  </body>
</html>


