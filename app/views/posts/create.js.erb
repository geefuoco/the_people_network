<%

  posted_path = request.referrer.split("/")
  posted_path.each { |ps| puts ps }
  if posted_path[3] == "users"
%>

$div = $("#profile-feed")

<% else %>

$div = $("#feed")

<% end %>

var new_post = $("<%= j render "shared/post", post: @post %>")

$($div).prepend(new_post.hide().fadeIn(2500))

$("#no-posts").hide()

$("#main-modal").modal("hide")

$("#flash").html("<%= j render "shared/flash" %>")
